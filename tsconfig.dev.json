{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "types": ["node", "express"],
      "lib": ["es2015"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  